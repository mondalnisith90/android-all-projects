<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardViewResultActivity">




        <RelativeLayout
            android:id="@+id/layout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/train3"
            android:layout_centerHorizontal="true"
            app:civ_border_width="3dp"
            app:civ_border_color="#0000FF"
            android:layout_marginTop="20dp"
            />


            <TextView
                android:id="@+id/marque_text"
                android:layout_below="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginBottom="15dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:text="Hello  User  ! ! !   Wish  You  Very  Happy  Train  Journey......"
                />

        </RelativeLayout>



    <ScrollView
        android:layout_below="@+id/layout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/layout1"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATION NAME : "

                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:textColor="#ee00aa"

                />

            <TextView
                android:id="@+id/station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="5dp"

                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            >


            <TextView
                android:id="@+id/arriaval_time_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Train Will Come to This Station at  "
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:textColor="#ee00aa"
                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/layout3"
            android:layout_below="@+id/layout2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/arriaval_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout4"
            android:layout_below="@+id/layout3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/departure_time_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Train Will Leave This Station at "
                android:textColor="#ee00aa"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout5"
            android:layout_below="@+id/layout4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/departure_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/layout6"
            android:layout_below="@+id/layout5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance Of This Station From "
                android:textColor="#ee00aa"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/source_train_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="2dp"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout7"
            android:layout_below="@+id/layout6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >



            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout8"
            android:layout_below="@+id/layout7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/halt_time_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Train Will Stop in This Station For  "
                android:textColor="#ee00aa"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"

                />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout9"
            android:layout_below="@+id/layout8"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/halt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout10"
            android:layout_below="@+id/layout9"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/running_day_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Train Will Come in This Station at "
                android:textColor="#ee00aa"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout11"
            android:layout_below="@+id/layout10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/running_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/running_day_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Of  it's  Running  Period"
                android:textColor="#EE00AA"
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />


        </LinearLayout>



    </RelativeLayout>

    </ScrollView>




</RelativeLayout>