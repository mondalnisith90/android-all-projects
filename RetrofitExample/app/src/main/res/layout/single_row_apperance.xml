<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:background="#ffffff"
    android:layout_margin="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="17dp"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_thumbnail"
            android:layout_marginTop="20dp"
            android:text="id : "
            android:textColor="#ee00aa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="30dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_view1"
            android:layout_marginTop="21dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:paddingStart="3dp"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_thumbnail"
            android:text="album id : "
            android:textColor="#ee00aa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/id"
            android:paddingStart="30dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/album_id"
            android:layout_below="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_view2"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:paddingStart="3dp"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/text_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_thumbnail"
            android:text="title : "
            android:textColor="#ee00aa"
            android:textSize="18sp"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/album_id"
            android:textStyle="bold"
            android:paddingStart="30dp"
            android:layout_marginBottom="4dp"
            tools:ignore="RtlSymmetry" />


        <TextView
            android:id="@+id/album_title"
            android:layout_below="@+id/album_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_view3"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:paddingStart="3dp"
            android:layout_marginBottom="10dp"
            />



    </RelativeLayout>

</androidx.appcompat.widget.CardView>