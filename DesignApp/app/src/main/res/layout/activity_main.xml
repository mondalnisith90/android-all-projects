<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="#000000">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <com.goodiebag.protractorview.ProtractorView
                android:layout_width="200dp"
                android:layout_height="300dp"
                app:arcColor="#757575"
                app:arcProgressColor="#EE00AA"
                app:tickColor="#32CD32"
                app:tickProgressColor="#ff0000"
                app:textColor="#00FFFF"
                app:textProgressColor="#FFFFFF"
                app:angleTextSize="13sp"
                app:arcWidth="15dp"
                app:progressWidth="15dp"
                app:tickOffset="20dp"
                app:tickLength="12dp"
                app:angle="100"
                app:tickIntervals="15"
                app:ticksBetweenLabel="three"
                app:touchInside="true"
                app:roundEdges="true"
                app:thumb="@drawable/thumb_for_eq"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BASS BOOST"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginTop="-15dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <com.goodiebag.protractorview.ProtractorView
                android:layout_width="200dp"
                android:layout_height="300dp"
                app:arcColor="#BDBDBD"
                app:arcProgressColor="#EE00AA"
                app:tickColor="#32CD32"
                app:tickProgressColor="#ff0000"
                app:textColor="#00FFFF"
                app:textProgressColor="#FFFFFF"
                app:angleTextSize="13sp"
                app:arcWidth="15dp"
                app:progressWidth="15dp"
                app:tickOffset="20dp"
                app:tickLength="12dp"
                app:angle="100"
                app:tickIntervals="15"
                app:ticksBetweenLabel="three"
                app:touchInside="true"
                app:roundEdges="true"
                app:thumb="@drawable/thumb_for_eq"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIRTUALIZER"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="italic"
                android:layout_marginTop="-15dp"
                />
        </LinearLayout>

    </LinearLayout>






</LinearLayout>